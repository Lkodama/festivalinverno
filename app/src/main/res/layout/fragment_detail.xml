<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@drawable/ic_menu_slideshow"
            android:id="@+id/imageView2"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="30dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Academia Atlética"
              android:textStyle="bold" android:textAlignment="center"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Musculação, Dança, Treino Funcional" android:textAlignment="center"
              android:fontFamily="sans-serif-thin"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Rua Direita,55 - 2º Andar" android:textAlignment="center"
              android:fontFamily="sans-serif-thin"/>
    <Button
            android:text="Vá agora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorAccent"


    />

</LinearLayout>